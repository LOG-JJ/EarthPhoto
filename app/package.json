{
  "name": "photo-globe-viewer",
  "private": true,
  "version": "0.1.0",
  "description": "Local photo/video geo globe viewer",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "build": "npm.cmd run typecheck && vite build",
    "dist:win": "npm.cmd run build && electron-builder --win nsis",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "better-sqlite3": "^11.8.1",
    "cesium": "^1.138.0",
    "chokidar": "^4.0.3",
    "exiftool-vendored": "^29.3.0",
    "fast-glob": "^3.3.3",
    "ffmpeg-static": "^5.2.0",
    "heic-decode": "^2.1.0",
    "heic2any": "^0.0.4",
    "i18next": "^25.0.1",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "mime-types": "^3.0.1",
    "quick-lru": "^7.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.0.0",
    "sharp": "^0.34.3",
    "supercluster": "^8.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.throttle": "^4.1.9",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/supercluster": "^7.1.3",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^37.2.0",
    "electron-builder": "^25.1.8",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-cesium": "^1.2.23",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.photoglobe.viewer",
    "productName": "PhotoGlobeViewer",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "win": {
      "signAndEditExecutable": false,
      "target": [
        "nsis"
      ]
    }
  }
}
